{% extends 'base.html.twig' %}

{% block title %}Mes expériences{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="table-experience">
            <h2 class="text-center mb-4">Mes Expériences</h2>

            {% if experiences %}
                <div class="d-flex justify-content-between">
                    <a href="{{ path('account') }}"><i class="fas fa-backward"></i> Retour au Dashboard</a>
                    <a href="{{ path('experience_add') }}" class="btn btn-primary"><i class="fas fa-plus"></i> Ajouter une expérience</a>
                </div>

                <table class="table">
                    <thead>
                        <tr>
                            <th class="align-middle" scope="col" style="width: 18%">Année</th>
                            <th class="align-middle" scope="col" style="width: 15%">Poste</th>
                            <th class="align-middle" scope="col">Description</th>
                            <th class="align-middle" scope="col" style="width: 14%">Entreprise</th>
                            <th class="align-middle" scope="col" style="width: 10%">Ville</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for experience in experiences %}
                    <tr>
                        <td class="align-middle">{{ experience.year }}</td>
                        <td class="align-middle">{{ experience.title }}</td>
                        <td class="align-middle add-new-line">{{ experience.description }}</td>
                        <td class="align-middle">{{ experience.company }}</td>
                        <td class="align-middle">{{ experience.city }}</td>
                        <td class="align-middle" style="width: 20%"><a class="btn btn-primary px-3 mx-3" href="{{ path("experience_edit", {id: experience.id}) }}"><i class="far fa-edit"></i></a>
                            {{ include('experience/_form_delete.html.twig') }}
                        </td>
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% else %}

                <div class="d-flex justify-content-around my-5">
                    <a href="{{ path('experience_add') }}" class="btn btn-primary btn-lg"><i class="fas fa-plus"></i> Ajouter une expérience</a>
                </div>

                <a href="{{ path('account') }}" class=""><i class="fas fa-backward"></i> Retour au Dashboard</a>

            {% endif %}
        </div>
    </div>

{% endblock %}
