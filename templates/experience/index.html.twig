{% extends 'base.html.twig' %}

{% block title %}Mes expériences{% endblock %}

{% block body %}
    <div class="container my-5" style="min-height: 400px">
        <div class="table-experience">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
            {% for message in app.flashes('delete-success') %}
                <div class="alert alert-danger">
                    {{ message }}
                </div>
            {% endfor %}

                <div class="d-flex justify-content-between">
                    <a href="{{ path('account') }}"><i class="fas fa-backward"></i> Retour au Dashboard</a>
                    <a href="{{ path('experience_add') }}" class="btn btn-primary">Ajouter une expérience</a>
                </div>

                <table class="table">
                    <thead>
                        <tr>
                            <th class="align-middle" scope="col" style="width: auto">Année</th>
                            <th class="align-middle" scope="col" style="width: auto">Poste</th>
                            <th class="align-middle" scope="col" style="width: auto">Entreprise</th>
                            <th class="align-middle" scope="col" style="width: auto">Ville</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for experience in experiences %}
                    <tr>
                        <td class="align-middle">{{ experience.year }}</td>
                        <td class="align-middle">{{ experience.title }}</td>
                        <td class="align-middle">{{ experience.company }}</td>
                        <td class="align-middle">{{ experience.city }}</td>
                        <td class="align-middle" style="width: 20%"><a class="btn btn-primary px-3 mx-3" href="{{ path("experience_edit", {id: experience.id}) }}"><i class="far fa-edit"></i></a>
                            {{ include('experience/_form_delete.html.twig') }}
                        </td>
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
        </div>
    </div>

{% endblock %}
