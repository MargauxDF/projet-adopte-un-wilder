{% extends 'base.html.twig' %}

{% block title %}{{ app.user.firstname }}{% endblock %}

{% block body %}

    <section class="background-cv mt-4">

        {% if app.user %}
        <div class="infos d-flex justify-content-between">
            <div class="user-picture">
                <a class="text-decoration-none" href="{{ path('infos_index') }}"><img width="150px" src="/uploads/pictures/{{ app.user.pictureFilename ?? 'user.png' }}" alt="profile-picture">
                    <i class="fas fa-2x fa-user-edit"></i>
                </a>
            </div>
            <div>
                <p>{{ app.user.linkedin }}</p>
                <p>{{ app.user.github }}</p>
                <p>{{ app.user.twitter }}</p>
                <p>{{ app.user.portfolio }}</p>
            </div>
            <div>
                <p>Prénom : {{ app.user.firstname }}</p>
                <p>Nom : {{ app.user.lastname }}</p>
                <p>Email : {{ app.user.email }}</p>
                <p>Téléphone : {{ app.user.telephone }}</p>
            </div>

        </div>

        <hr>

        <i><p>{{ app.user.presentation ?? 'Bonjour, je suis un Wilder motivé et compétent !' }}</p></i>

        <hr>

        <div class="skills">
            <a class="text-decoration-none" href="">
                <h1 class="h3 text-center">Compétences <i class="fas fa-pen"></i></h1>
            </a>
        </div>

        <hr>

        <div class="experiences">
            <a class="text-decoration-none" href="{{ path('experience_index') }}">
                <h1 class="h3 text-center">Expérience <i class="fas fa-pen"></i></h1>
            </a>

            {% for experience in app.user.experiences %}

                <b><p>{{ experience.year }}</p></b>
                <p>{{ experience.title }}</p>
                <p>{{ experience.company }}</p>
                <p>{{ experience.city }}</p>

            {% endfor %}
        </div>

        <hr>

        <div class="education text-center">
            <a class="text-decoration-none" href="{{ path('education_index') }}">
                <h1 class="h3">Formation <i class="fas fa-pen"></i></h1>
            </a>
        </div>

        <hr>

        <div class="projects text-center">
            <a class="text-decoration-none" href="">
                <h1 class="h3">Mes Projets <i class="fas fa-pen"></i></h1>
            </a>
        </div>

        {% endif %}

    </section>

{% endblock %}
