{% extends 'base.html.twig' %}

{% block body %}

<div class="container">
    <h1 class="text-center my-5">Tous Nos Wilders</h1>
    <div class="row row-cols-1 row-cols-sm-1 row-cols-lg-3 row-cols-md-2 g-5">
        {% for wilder in wilders %}
        <div class="col mb-4">
            <div class="card shadow-sm border-card-wilder">
                <div class="card-img-wilder">
                    <img class="card-img-top" src="/uploads/pictures/{{ wilder.pictureFilename ?? 'coding.jpeg' }}" alt="profile-picture">
                </div>
                <div class="card-body card-body-wilder">
                    <div class="row d-flex">
                        <p class="card-text title-name-card blue-color">{{ wilder.lastname }} {{ wilder.firstname }}</p>
                    </div>
                    
                    <a class="click-send-email" href="{{ wilder.email|mailTo }}"><i class="fas fa-paper-plane me-2"></i>{{ wilder.email }}</a>
                    <div class="d-flex justify-content-center align-items-center my-2">
                        <a href="{{ path("wilder_show", {slug: wilder.slug}) }}" class="btn btn-primary btn-sm px-4 py-2">Voir CV {{ wilder.firstname }}</a>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>

{% endblock %}
