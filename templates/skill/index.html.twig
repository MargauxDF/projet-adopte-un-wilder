{% extends 'base.html.twig' %}

{% block title %}Mes compétences{% endblock %}

{% block body %}
<div class="container my-5">
        <div class="table-compétences">
            <h2 class="text-center mb-4">Mes Compétences</h2>
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
            {% for message in app.flashes('delete-success') %}
                <div class="alert alert-danger">
                    {{ message }}
                </div>
            {% endfor %}
            <div class="d-flex justify-content-between">
                <a href="{{ path('account') }}"><i class="fas fa-backward"></i> Retour au Dashboard</a>
                <a href="{{ path('skill_add') }}" class="btn btn-primary">Ajouter une compétence</a>
            </div>
                 <table class="table">
                    <thead>
                    <tr>
                        <th class="align-middle" scope="col">Logo</th>
                        <th class="align-middle" scope="col">URL</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for skill in skills %}
                    <tr>
                        <td class="align-middle"><img width="50px" src="{{ skill.url }}" alt=""></td>
                        <td class="align-middle">{{ skill.url }}</td>
                        <td class="align-middle"><a class="btn btn-primary px-3 mx-3" href="{{ path("skill_edit", {id: skill.id}) }}"><i class="far fa-edit"></i></a>
                            {{ include('skill/_form_delete.html.twig') }}
                        </td>
                    </tr>
                    {% endfor %}
                    </tbody>
                 </table>
        </div>
</div>
{% endblock %}
